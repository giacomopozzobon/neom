{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
<div class="container mt-5">
  <h1 class="mb-4">Edit Product: {{ product.name }}</h1>

  {{ form_start(form) }}
    <div class="mb-3">
        {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter product name'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.price, {'attr': {'class': 'form-control', 'placeholder': 'Enter product price'}}) }}
    </div>
    <button type="submit" class="btn btn-primary">Update Product</button>
  {{ form_end(form) }}

  <a href="{{ path('product_index') }}" class="btn btn-secondary mt-3">Back to List</a>
</div>
{% endblock %}
