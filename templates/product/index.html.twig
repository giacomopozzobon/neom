{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}

  <div class="row">
    <div class="col-12">


      <div class="row">
        <div class="col-6">
          <h1>Products</h1>
        </div>
        <div class="col-6 text-end">
          <a href="{{ path('product_create') }}" class="btn btn-primary">
              <i class="bi bi-plus-circle"></i> Create New Product
          </a>
        </div>
      </div>


    </div>

    <div class="col-12">



      {% if products is not empty %}
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Price</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for product in products %}
              <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td><a href="{{ path('product_edit', { id: product.id }) }}" class="btn btn-sm btn-primary">Edit</a></td>
                <td>
                  <form method="POST" action="{{ path('product_delete', { id: product.id }) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                    <input type="hidden" name="_method" value="DELETE" />
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}" />
                    <button type="submit" class="btn btn-sm btn-danger">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      {% else %}
        <p class="text-muted"><i>No products found. Create a new product.</i></p>
      {% endif %}



    </div>
{% endblock %}
