{% extends 'base.html.twig' %}

{% block title %}Create Product{% endblock %}

{% block body %}
<div class="container mt-5">
  <h1 class="mb-4">Create a New Product</h1>

  {{ form_start(form) }}
    <div class="mb-3">
      {{ form_row(form.name) }}
    </div>
    <div class="mb-3">
      {{ form_row(form.price) }}
    </div>
    <div class="mb-3">
      {{ form_row(form.stock) }}
    </div>
    {{ form_row(form.save) }}
  {{ form_end(form) }}

  <a href="{{ path('product_index') }}" class="btn btn-secondary mt-3">Back to List</a>
</div>
{% endblock %}